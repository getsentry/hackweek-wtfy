# Database (for local development - matches docker-compose.dev.yml)
DATABASE_URL="postgresql://wtfy:wtfy_dev_password@localhost:5433/wtfy_dev"

# GitHub Integration (get these from https://github.com/settings/developers)
GITHUB_TOKEN=your_github_personal_access_token_here
GITHUB_CLIENT_ID=your_github_oauth_app_client_id
GITHUB_CLIENT_SECRET=your_github_oauth_app_client_secret

# OpenAI (get from https://platform.openai.com/api-keys)
OPENAI_API_KEY=your_openai_api_key_here

